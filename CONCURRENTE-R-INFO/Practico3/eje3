programa eje1
procesos
  proceso juntarFlores
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
  fin
  proceso juntarPapeles
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
  fin
  proceso limpiarFlores
  rep
areas
  areaF:AreaPC(1,1,5,10)
  areaP:AreaPC(6,1,10,9)
robots
  robot florero
  variables
    xi,yi,x,y:numero
  comenzar
    xi:=PosAv
    yi:=PosCa
    Random(x,1,5)
    Random(y,1,10)
    BloquearEsquina(x,y)
      repetir 5
      Pos(x,y)
      tomarFlor
      BloquearEsquina(10,10)
      Pos(10,10)
      LiberarEsquina(x,y)
      depositarFlor
    Pos(xi,yi)
  fin
  robot papelero
  variables
  
  comenzar
  
  fin

variables 

comenzar
  AsignarArea(robot1,areaF)
  AsignarArea(robot2,areaF)
  AsignarArea(robot3,areaP)
  AsignarArea(robot4,areaP)
  Iniciar(robot1,6,1)
  Iniciar(robot2,7,10)
  Iniciar(robot3,8,10)
  Iniciar(robot4,9,10) 
fin